{% extends "AdminBundle::admin_layout.html.twig" %}

{% block menu %}
	{{ knp_menu_render('AdminBundle:Builder:adminMenu') }}
{% endblock %}

{% block rastro %}{{ wo_render_breadcrumbs() }}{% endblock %}

{% block titulo %}Listado de los examenes{% endblock %}

{% block msg %}
	{% if app.session.flash('ok') %}
	    <div class="success mensajes">
	        <span>{{ app.session.flash('ok') }}</span>
	    </div>
	{% elseif app.session.flash('info') %}
		<div class="info">
	        <span>{{ app.session.flash('info') }}</span>
	    </div>
	{% elseif app.session.flash('error') %}
		<div class="error">
	        <span>{{ app.session.flash('error') }}</span>
	    </div>
	{% endif %}
{% endblock %}





{% block cuerpo %}
               
    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Codigo</th>               
            </tr>
        </thead>
        <tbody>
     
{% for examen in examenes %}           
            <tr>
                <td>{{ loop.index }}</td>                               
                <td><a href="{{ path('examen_edit',{'id':examen.id}) }}">{{ examen.nombre }}</a></td>                                
                <td>{{ examen.codigo }}</td>
            </tr>
        {% endfor %} 
      </tbody>
    </table>  
    <a href="{{ path('examen_new') }}" class="button left"><span class="label">Nuevo examen</span></a>
    
    {% if examenes %}
	{{ simple_paginator_render('examen_examen', null) }}
    {% endif %}
    
{% endblock %}
    
        