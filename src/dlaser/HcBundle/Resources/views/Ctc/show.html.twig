{% extends "AdminBundle::admin_layout.html.twig" %}

{% block menu %}
	{{ knp_menu_render('AdminBundle:Builder:adminMenu') }}
{% endblock %}

{% block rastro %}{{ wo_render_breadcrumbs() }}{% endblock %}

{% block titulo %}Detalles del examen{% endblock %}

{% block msg %}
	{% if app.session.flash('ok') %}
	    <div class="success mensajes">
	        <span>{{ app.session.flash('ok') }}</span>
	    </div>
	{% elseif app.session.flash('info') %}
		<div class="info">
	        <span>{{ app.session.flash('info') }}</span>
	    </div>
	{% elseif app.session.flash('error') %}
		<div class="error">
	        <span>{{ app.session.flash('error') }}</span>
	    </div>
	{% endif %}
{% endblock %}




{% block cuerpo %}


    <table>
        <tbody>
         <tr>
            <th>Codigo</th>
            <td>{{ entity.codigo }}</td>
         </tr>
         <tr>
            <th>Nombre</th>
            <td>{{ entity.nombre }}</td>
         </tr>
         <tr>
            <th>Tipo</th>
            <td>{{ entity.tipo }}</td>
         </tr>
        </tbody>
    </table>
        
    <a href="{{ path('examen_edit', { 'id': entity.id }) }}" class="button left"><span class="label">Modificar examen</span></a>
    <a href="#" class="button middle"><span class="label">Regresar al listado</span></a>

    
{% endblock %}
    
