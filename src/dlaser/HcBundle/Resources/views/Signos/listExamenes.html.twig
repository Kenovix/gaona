{% extends "AdminBundle::admin_layout.html.twig" %}

{% block menu %}
	{{ knp_menu_render('AdminBundle:Builder:adminMenu') }}
{% endblock %}

{% block rastro %}{{ wo_render_breadcrumbs() }}{% endblock %}

{% block titulo %}Examenes del paciente {{ paciente.priNombre}} {{ paciente.priApellido }}{% endblock %}

{% block msg %}
	{% if app.session.flash('ok') %}
	    <div class="success mensajes">
	        <span>{{ app.session.flash('ok') }}</span>
	    </div>
	{% elseif app.session.flash('info') %}
		<div class="info">
	        <span>{{ app.session.flash('info') }}</span>
	    </div>
	{% elseif app.session.flash('error') %}
		<div class="error">
	        <span>{{ app.session.flash('error') }}</span>
	    </div>
	{% endif %}
{% endblock %}




{% block cuerpo %}


  <table>
     <thead>
            <tr>
                <th>Nombre</th>
                <th>Fecha</th>
                <th>Resultado</th>
                <th>Opcion</th>                
            </tr>
        </thead>
        <tbody>   
        {% for examen in examenes %}            
            <tr>
                <td>{{ examen.nombre}}</td>
                <td>{{ examen.fecha | date('d-m-Y') }}</td>
                <td>{{ examen.resultado}}</td>
                <td>                
                <a href="{{ path('hc_editHcExamen',{'id':examen.id}) }}" rel="#overlay"  class="button left"><span class="label">Modificar</span></a>         	               
    			</td>
            </tr>
        {% endfor %}
      </tbody>
    </table>
    
    <a href="{{ path('hcExamen_new', {'factura':factura.id}) }}" class="button left"><span class="label">Crear nuevo</span></a> 
    

{% endblock %}

